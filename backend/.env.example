# DBT Metadata Explorer Backend - Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000

# Project Paths
DBT_PROJECTS_DIR=dbt_projects_2
PROJECTS_DIR=../dbt_projects_2
OUTPUT_DIR=./exports
METADATA_PATH=./exports/uni_metadata.json

# File Watcher Configuration
ENABLE_FILE_WATCHER=true
WATCHER_POLL_INTERVAL=30  # Seconds between file system checks

# AI Services
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-api-key-here
ENABLE_AI_DESCRIPTIONS=true

# Authentication (optional)
# Enable if you need basic auth protection
ENABLE_AUTH=false
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL 
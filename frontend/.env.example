# DBT Metadata Explorer Frontend - Environment Variables
# Copy this file to .env and fill in your values

# API connection settings
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# Feature flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_LINEAGE=true

# UI Configuration
REACT_APP_DEFAULT_THEME=light  # light or dark
REACT_APP_PAGE_SIZE=20  # Number of models to show per page
REACT_APP_AUTO_REFRESH_INTERVAL=60000  # Time in ms between auto-refresh calls (when enabled)

# Optional Analytics
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=your-analytics-id 